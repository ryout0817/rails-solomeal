<% provide(:title, 'eatcapsule | Sign_Up')%>
<div class="main">
  <div class="side-nav">
    <nav id="nav-list">
      <div class="side-list">
        <div>
          <ul class="menu-list">
            <li>
              <%= link_to "/", class: "list-item" do %>
                <i class="fa-solid fa-house"></i>Home
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class: "list-item" do %>
                <i class="fa-solid fa-book"></i>About
              <% end %>
            </li>
            <li>
              <%= link_to user_session_path, class: "list-item" do %>
                <i class="fa-solid fa-user"></i>Login
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <div class="content">
    <div class="content-wrapper">
      <div class="container-content user-form">
        <div class="content-document-inner">
          <h1 class="signup-icon title-font">SignUp</h1>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :ニックネーム %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :パスワード %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :パスワード確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "アカウント登録", class: "form-submit base-btn" %>
            </div>
            <div class="actions">
              <%= link_to  "ログイン", new_user_session_path, class: "form-login" %>
            </div>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</div>
