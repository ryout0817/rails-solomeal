<% provide(:title, 'ひとり飯 | Login')%>
<div class="main">
  <%= render 'shared/out_sidebar.html.erb'%>
  <div class="content-wrapper">
    <div class="page-title">
      <h1 class="title-font">Login</h1>
    </div>
    <div class="content-user">
      <div class="container-content user-form">
        <div class="content-document-inner">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control login-form form-space" %>
            </div>
            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control login-form pass-space" %>
            </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン情報を保存する %>
            </div>
          <% end %>
            <div class="actions">
              <%= f.submit "ログイン", class: "form-submit base-btn" %>
            </div>
            <div class="actions">
              <%= link_to "アカウント登録", new_user_registration_path, class: "registration-btn link-btn base-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
