<% provide(:title, 'eatcapsule | Sign_Up')%>
<div class="main">
  <div class="side-nav">
    <nav id="nav-list">
      <div class="side-list">
        <div>
          <ul class="menu-list">
            <li>
              <%= link_to "/", class: "list-item" do %>
                <i class="fa-solid fa-house"></i>Home
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class: "list-item" do %>
                <i class="fa-solid fa-book"></i>About
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class: "list-item" do %>
                <i class="fa-solid fa-user"></i>SignUp
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <div class="content">
    <div class="content-wrapper">
      <div class="container-content user-form">
        <div class="content-document-inner">
          <h1 class="login-icon title-font">Login</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン情報を保存する %>
            </div>
          <% end %>
            <div class="actions">
              <%= f.submit "ログイン", class: "form-submit base-btn" %>
            </div>
            <div class="actions">
              <%= link_to "アカウント登録", new_user_registration_path, class: "registration-btn link-btn base-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
