<header>
  <nav class="navbar">
    <div class="container">
      <div class="header-items">
        <div class="header-left">
          <%= link_to "/", class: "header-logo" do%>
            <h1 class="title-icon">ひとり飯</h1>
          <% end %>
        </div>
        <div class="header-right">
          <% if user_signed_in? %>
            <div class="recipe-create">
              <nav class="nav-header-top-search">
                <%= form_with(url: search_recipes_path, local: true, method: :get ) do |f| %>
                  <%= f.search_field :keyword, class: 'header-search', placeholder: 'キーワードで検索' %>
                <% end %>
              </nav>
              <%= link_to "レシピ作成", new_recipe_path(@user), class: "size recipe-btn"%>
            </div>
            <%= render 'shared/hamburger_menu' %>
          <% else %>
            <div class="recipe-create">
              <nav class="nav-header-top-search">
                <%= form_with(url: search_recipes_path, local: true, method: :get ) do |f| %>
                  <%= f.search_field :keyword, class: 'header-search', placeholder: 'キーワードで検索' %>
                <% end %>
              </nav>
              <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "size recipe-btn", method: :post %>
              <%= render 'shared/hamburger_menu' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
<script>
document.querySelector('.menu-btn').addEventListener('click', function(){
    document.querySelector('.menu').classList.toggle('is-active');
});
</script>
