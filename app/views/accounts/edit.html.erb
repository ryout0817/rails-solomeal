<% provide(:title, 'プロフィール編集')%>
<div class="main">
  <%= render 'shared/in_sidebar'%>
  <div class="content-wrapper">
    <div class="page-title">
      <h1 class="signup-icon title-font">マイページ編集</h1>
    </div>
    <div class="content-user">
      <div class="container-content user-form auto-center">
        <div class="content-document-inner">
          <%= form_with model: @user, url: account_path(@user), local: true do |f| %>
            <div class="field">
              <div class="user-content">
                <div class="data-user">
                  <div class="user-icon-wrap">
                    <% if @user.avatar? %>
                      <%= image_tag @user.avatar.url, alt: "プロフィール写真", class: "user-icon-img"%>
                    <% else %>
                      <div class="user-icon">
                        <i class="fa-solid fa-user-gear show-user-icon gray-color"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="user-content">
                    <div class="user-name">
                      <%= f.file_field :avatar%>
                    </div>
                  </div>
                </div>
              </div>
              <div class="user-content">
                <label class="user-label" for="name">ニックネーム</label>
                <div class="user-content-item">
                  <%= f.text_field :name, class: "form-control form-space" %>
                </div>
              </div>
              <div class="user-content">
                <label class="user-label" for="introduction">自己紹介</label>
                <div class="user-content-item">
                  <%= f.text_area :introduction, rows: 4, class: "form-control form-space"%>
                </div>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "更新", class: "form-submit base-btn" %>
            </div>
            <div class="actions">
              <%= link_to "戻る", account_path(@user), class: "return-link base-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
