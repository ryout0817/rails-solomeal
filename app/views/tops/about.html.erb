  <% else %>
    <%= render 'shared/out_sidebar.html.erb'%>
  <% end %>
  <div class="content-wrapper">
    <div class="page-title">
      <h1 class="document-icon title-font">Concept</h1>
    </div>
    <div class="content-about merge-4">
